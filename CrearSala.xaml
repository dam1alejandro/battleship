<Window x:Class="barquitos.CrearSala"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:barquitos"
        mc:Ignorable="d"
        Title="Barquitos" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock Text="Contraseña"></TextBlock>
            <TextBox x:Name="tbx_contrasenya" Margin="5,0" Width="100" MaxLength="10"></TextBox>
        </StackPanel>
        <Button x:Name="btn_aceptar" Grid.Row="1" Width="100" Height="25" Click="btn_aceptar_Click">Aceptar</Button>
    </Grid>
</Window>
